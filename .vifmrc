set ignorecase
set smartcase

nmap s :shell<cr>
nmap S :sort<cr>
nmap w :view<cr>
nmap o :edit<cr>
nmap O :!open %f<cr>

" Example of standard two-panel file managers mappings
nmap <f3> :!less %f<cr>
nmap <f4> :edit<cr>
nmap <f5> :copy<cr>
nmap <f6> :move<cr>
nmap <f7> :mkdir<space>
nmap <f8> :delete<cr>

set vicmd=gvim
